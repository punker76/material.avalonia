<Styles xmlns="https://github.com/avaloniaui">

    <Style Selector="TreeViewItem /template/ Border#SelectionBorder">
        <Setter Property="Background" Value="Transparent" />
    </Style>
    <Style Selector="TreeViewItem:pointerover /template/ Border#SelectionBorder">
        <Setter Property="Background" Value="{DynamicResource GreyDarken3Brush}" />
    </Style>

    <Style Selector="TreeViewItem:selected /template/ Border#SelectionBorder">
        <Setter Property="Background" Value="{DynamicResource BrownDarken3Brush}" />
    </Style>
    <Style Selector="TreeViewItem:selected:pointerover /template/ Border#SelectionBorder">
        <Setter Property="Background" Value="{DynamicResource BrownDarken2Brush}" />
    </Style>
  
    <Style Selector="TreeViewItem /template/ ToggleButton#expander:unchecked">
      <Setter Property="Foreground" Value="{DynamicResource LightGreenDarken3Brush}" />
    </Style>
    <Style Selector="TreeViewItem /template/ ToggleButton#expander:checked">
      <Setter Property="Foreground" Value="{DynamicResource LightGreenDarken2Brush}" />
    </Style>
</Styles>