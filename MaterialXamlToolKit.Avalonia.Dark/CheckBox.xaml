<Styles xmlns="https://github.com/avaloniaui" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <Style Selector="CheckBox">
        <Setter Property="BorderBrush" Value="{DynamicResource GreyDarken2Brush}" />
        <Setter Property="TextBlock.Foreground" Value="{DynamicResource BrownLighten4Brush}" />
    </Style>

    <Style Selector="CheckBox /template/ Ellipse">
        <Setter Property="Stroke" Value="{DynamicResource GreyLighten3Brush}" />
        <Setter Property="Fill" Value="{DynamicResource GreyLighten2Brush}" />
    </Style>

    <Style Selector="CheckBox:checked /template/ Border#check">
        <Setter Property="Background" Value="{DynamicResource LightGreenDarken3Brush}" />
    </Style>
    <Style Selector="CheckBox:unchecked /template/ Border#check">
        <Setter Property="Background" Value="{DynamicResource GreyBrush}" />
    </Style>
</Styles>