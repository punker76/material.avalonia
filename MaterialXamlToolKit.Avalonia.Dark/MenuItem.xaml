<Styles xmlns="https://github.com/avaloniaui">

    <Style Selector="MenuItem">
        <Setter Property="BorderBrush" Value="Transparent" />
        <Setter Property="Foreground" Value="{DynamicResource BrownLighten4Brush}" />
        <Setter Property="Background" Value="{DynamicResource GreyDarken4Brush}" />
    </Style>

    <Style Selector="MenuItem /template/ Border#MainBorder">
        <Setter Property="BorderBrush" Value="{DynamicResource GreyDarken2Brush}" />
        <Setter Property="Background" Value="{DynamicResource GreyDarken4Brush}" />
    </Style>

    <Style Selector="MenuItem:pointerover /template/ Border#root">
        <Setter Property="BorderBrush" Value="{DynamicResource GreyDarken1Brush}" />
    </Style>

    <Style Selector="MenuItem:selected /template/ Border#root">
        <Setter Property="BorderBrush" Value="{DynamicResource GreyDarken1Brush}" />
    </Style>

    <Style Selector="MenuItem:selected /template/ Path#rightArrow">
        <Setter Property="Fill" Value="{DynamicResource LightGreenDarken2Brush}" />
    </Style>

    <Style Selector="MenuItem /template/ Path#rightArrow">
        <Setter Property="Fill" Value="{DynamicResource LightGreenDarken3Brush}" />
    </Style>
    <Style Selector="MenuItem:disabled">
        <Setter Property="Foreground" Value="{DynamicResource GreyBrush}" />
    </Style>
</Styles>