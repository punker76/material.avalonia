<Styles xmlns="https://github.com/avaloniaui">

    <Style Selector="ProgressBar">
        <Setter Property="BorderBrush" Value="{DynamicResource GreyDarken2Brush}" />
        <Setter Property="Foreground" Value="{DynamicResource BrownLighten4Brush}" />
        <Setter Property="Background" Value="{DynamicResource BlueGreyBrush}" />
        <Setter Property="BorderThickness" Value="1" />
    </Style>

    <Style Selector="ProgressBar /template/ Border">
        <Setter Property="Background" Value="{DynamicResource BlueGreyDarken3Brush}" />
    </Style>
</Styles>